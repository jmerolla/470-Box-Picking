<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileScanApp.OrderListView">
    <ListView x:Name="MyListView"
            ItemsSource="{Binding OrderItems}"
            ItemTapped="Handle_ItemTapped"
            CachingStrategy="RecycleElement">

     <!--Custom View Cells-->
    
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <Grid>
            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="0.3*" />
               <ColumnDefinition Width="0.2*" />
               <ColumnDefinition Width="0.2*" />
               <ColumnDefinition Width="0.1*" />
               <ColumnDefinition Width="0.1*" />
             </Grid.ColumnDefinitions>
            <Label Text="{Binding Name}" FontAttributes="Bold" />
            <Label Grid.Column="1" Text="{Binding Location}" />
            <Label Grid.Column="2" Text="{Binding BarcodeID}" />
            <Label Grid.Column="3" Text="{Binding PalletQty}" />
            <Label Grid.Column="4" Text="{Binding CartonQty}" HorizontalTextAlignment="End" />
           </Grid>
         </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
   
  </ListView>
</ContentPage>
